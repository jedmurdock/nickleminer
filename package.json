{
  "name": "nickleminer",
  "version": "0.1.0",
  "description": "Archive and playlist management for WFMU's Nickel And Dime Radio",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "setup": "npm install && npm run docker:up && cd backend && npx prisma generate && npx prisma migrate dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "wfmu",
    "radio",
    "music",
    "archive",
    "playlist"
  ],
  "author": "",
  "license": "MIT"
}

